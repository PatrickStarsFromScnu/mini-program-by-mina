<view class="my-experiments-top">
  <view class="my-experiments-top-center">
    <view class="half-col" bindtap="tapTopLeft">
      <text>预约实验</text>
    </view>
    <view class="line"></view>
    <view class="half-col" bindtap="tapTopRight">
      <text>发布实验</text>
    </view>
  </view>
  <view class="light {{move}}"></view>
</view>

<view hidden="{{move === 'light-right'}}">
  <view class="my-scroll-text">
    <text>已预约且还在进行的实验</text>
  </view>
  <view wx:for="{{subExperimentsInfo}}" wx:key="index">
    <experiment-brief class="{{'brief-image-' + index}}" experimentId="{{item.experiment_id}}" index="{{index}}" experiment-name="{{item.experiment.title}}" type="{{item.experiment.type}}" pay="{{item.experiment.pay}}" duration="{{item.experiment.duration}}" publisher="{{item.experiment.publisher_name}}" picture="{{item.user.picture}}"></experiment-brief>
  </view>
</view>
<view hidden="{{move === 'light-left'}}">
  <button class="my-big-button" bindtap="navigateToReleaseExperiments">我要发布</button>
  <view wx:for="{{pubExperimentsInfo}}" wx:key="index">
    <view class="small-button-around">
        <button class="my-small-button" data-experimentid="{{item.experiment_id}}" bindtap="deleteExperiment">删除该实验</button>
    </view>
    <experiment-brief class="{{'brief-image-' + index}}" experimentId="{{item.experiment_id}}" index="{{index}}" experiment-name="{{item.title}}" type="{{item.type}}" pay="{{item.pay}}" duration="{{item.duration}}" publisher="{{item.publisher_name}}" picture="{{picture}}"></experiment-brief>
  </view>
</view>
