<view height="100%">
  <view class="release-experiment-form">
  <form bindsubmit="PubExperiment">
    <view class="form-item">
      <span>实验标题：</span>
      <input name="title" placeholder='单行输入'></input>
    </view>
    <view class="form-item">
      <span style='float:left'>实验类型：</span>
      <view class='select_box'>
        <view class='select' catchtap='selectTap'>
          <text class='select_text'>{{selectData[index]}}</text>
          <image class='select_img {{show&&"select_img_rotate"}}' src='/images/down.png'></image>         
        </view>
        <view class='option_box' style='height:{{show?(selectData.length>5?300:selectData.length*60):0}}rpx;'>
          <text class='option' style='{{index==selectData.length-1&&"border:0;"}}' wx:for='{{selectData}}' wx:key='this' data-index='{{index}}' catchtap='optionTap'>{{item}} </text>
        </view>
      </view>
    </view>
    <view class="form-item">
      <span>实验时长：</span>
      <input name="duration" placeholder='如10（单位为min）'></input>
    </view>
    <view class="form-item">
      <span>报酬(元)：</span>
      <input name="pay" placeholder='如15'></input>
    </view>
    <view class="form-item">
      <span>实验地点：</span> 
      <textarea name="position" placeholder='多行输入'></textarea> 
    </view>
    <view class="form-item">
      <span>实验要求：</span>
      <textarea name="request" placeholder='多行输入'></textarea>
    </view>
    <view class="form-item">
      <span>时间段：</span>
      <textarea name="period" placeholder='如 11:20~11:30, 11:40~11:50'></textarea>
    </view>
    <view class="form-item">
      <span>报名方式：</span>
      <textarea name="application" placeholder='如短信报名：156xxx'></textarea>
    </view>
    <view class="form-item">
      <span>其他：</span>
      <textarea name="others" placeholder='多行输入'></textarea>
    </view>
    <button formType="submit">发布</button>
    </form>
  </view>
</view>
   