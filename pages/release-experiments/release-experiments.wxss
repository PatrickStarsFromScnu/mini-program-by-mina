page {
  height: 100%;
}
.release-experiment-form {
  position: absolute;
  left: 10%;
  top:5%;
  font-size: 32rpx;
}
.form-item span {
  text-align: right;
  width: 190rpx;
  margin-right: 44rpx;
}
.release-experiment-form .form-item input {
  border: 2rpx solid #BBBBBB;
  width: 400rpx;
}
.release-experiment-form .form-item textarea{
  border: 2rpx solid #BBBBBB;
  height:128rpx;
  width: 400rpx;
  float: right;
}
.release-experiment-form button {
  margin-top: 40rpx;
  background-color: #EA7382;
  width: 642rpx;
  height: 80rpx;
  font-size: 36rpx;
  color: white;
}
.select_box{
  background: #fff;
  width: 65%;
  position: relative;
}
.select{
  box-sizing: border-box;
  width: 100%;
  height: 70rpx;
  border:1px solid #efefef;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  background: #fff;
}
.select_text{
  font-size: 30rpx;
  flex: 1;
}
.select_img{
  width: 40rpx;
  height: 40rpx;
  display: block;
  transition:transform 0.3s;
}
.select_img_rotate{
  transform:rotate(180deg); 
}
.option_box{
  position: absolute;
  top: 70rpx;
  width: 100%;
  border:1px solid #efefef;
  box-sizing: border-box;
  height: 0;
  overflow-y: auto;
  border-top: 0;
  background: #fff;
  transition: height 0.3s;
  z-index: 100;
}
.option{
  display: block;
  line-height: 40rpx;
  font-size: 30rpx;
  border-bottom: 1px solid #efefef;
  padding: 10rpx;
  background-color: #ffffff;
}
.form-item{
  display: flex;
  flex-direction: row;
  margin-top: 28rpx;
}