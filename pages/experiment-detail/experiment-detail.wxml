<view style="height: 100%;">
  <view class="index-top-info">
    <image class="index-top-picture" src="{{experimentsInfo.user.picture}}" />
    <text class="index-top-name">{{experimentsInfo.publisher_name}}</text>
  </view>
  <view class="line-css"></view>
  <view class="experiment-detail">
    <view class="detail-item">
      <text>实验类型:</text>
      <text class="detail-font">{{experimentsInfo.type}}</text>
    </view>
    <view class="detail-item">
      <text>实验时长:</text>
      <text class="detail-font">{{experimentsInfo.duration}} min</text>
    </view>
    <view class="detail-item">
      <text>报酬:</text>
       <text class="detail-font-pay">￥{{experimentsInfo.pay}}</text>
    </view>
    <view class="detail-item-column">
      <text>实验地点:</text>
      <text style="font-size: 32rpx; margin: 16rpx 0 0 40rpx">{{experimentsInfo.position}}</text>
    </view>
    <view class="detail-item-column">
      <text>被试要求:</text>
      <text style="font-size: 32rpx; margin: 16rpx 0 0 40rpx">{{experimentsInfo.request}}</text>
    </view>
    <view class="detail-item-column">
      <text>可选时间段:</text>
      <text style="font-size: 32rpx; margin: 16rpx 0 0 40rpx">{{experimentsInfo.period}}</text>
    </view>
    <view class="detail-item-column">
      <text>实验内容:</text>
      <text style="font-size: 32rpx; margin: 16rpx 0 0 40rpx">{{experimentsInfo.content}}</text>
    </view>
    <view class="detail-item-column">
      <text>其他信息:</text>
      <text style="font-size: 32rpx; margin: 16rpx 0 0 40rpx">{{experimentsInfo.others}}</text>
    </view>
    <view class="detail-item-column">
      <text>报名方式:</text>
      <text style="font-size: 32rpx; margin: 16rpx 0 0 40rpx">{{experimentsInfo.application}}</text>
    </view>
  </view>
  <button class="{{subscribed ? 'gray':'green'}}" bindtap="manageSubExperiment">{{subscribed ? '取消标记':'标记为我已预约'}}</button>
  <text class="note">{{subscribed ? '先与主试联系取消预约，再点击此按钮删除记录':'先通过短信预约，成功后再添加至我的预约实验'}}</text>
</view>
