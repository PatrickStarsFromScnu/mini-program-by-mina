page {
  height: 100%;
}
.index-top-info {
  height: 12%;
  display: flex;
  align-items: center;
  margin-bottom: -2rpx;
  /* 解决元素间的间隙 */
}
.top-bg {
  height: 110rpx;
  background-color: #6476DB;
  margin-bottom: -106rpx;
}
.index-top-picture {
  height: 100rpx;
  width: 100rpx;
  border-radius: 50%;
  margin: 0 30rpx;
}
.index-top-name {
  font-size: 40rpx;
}
.line-css {
  width: 100%;
  height: 2rpx;
  background: #BBBBBB;
  margin-top: 12rpx;
}
.experiment-detail {
  position: relative;
  margin: 16rpx 34rpx;
}
.detail-item {
  display: flex;
  flex-direction: row;
  margin-top: 28rpx;
}
.detail-item text {
  font-size: 36rpx;
  color: #101010;
  margin: 0 10rpx;
}
.detail-item .detail-item-pay {
  font-size: 32rpx;
  color: #E83232;
  margin: 2rpx 6rpx;
}
.detail-item-column {
  display: flex;
  flex-direction: column;
  margin-top: 28rpx;
}
.detail-item-column text {
  font-size: 36rpx;
  color: #101010;
  margin: 0 10rpx;
}
button {
  color:white;
  height: 100rpx;
  width: 646rpx;
  margin-top: 40rpx;
}
.green {
  background-color: #8BC34A;
}
.gray {
  background-color: rgb(192, 192, 192);
}
.note {
  font-size: 28rpx;
  color: #999595;
  margin: 2% 10%; 
}